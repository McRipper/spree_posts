<div data-hook="admin_post_new_form_header">
  <%= render 'spree/shared/error_messages', :target => @post %>
  <h1><%= t("new_post") %></h1>  
</div>

<div data-hook="admin_post_new_form">
  <%= form_for(:post, :url => collection_url) do |f| %>
    <%= render :partial => "form", :locals => { :f => f } %>

    <div data-hook="admin_post_new_form_buttons">
      <%= render :partial => "spree/admin/shared/new_resource_links" %>
    </div>
  <% end %>
</div>
