  <% content_for :page_title do %>
    <%= t(:new_post) %>
  <% end %>

  <% content_for :page_actions do %>
    <li>
      <%= button_link_to t(:back_to_post_list), spree.admin_posts_path, :icon => 'icon-arrow-left' %>
    </li>
  <% end %>

<div data-hook="admin_post_new_form_header">
  <%= render 'spree/shared/error_messages', :target => @post %>
  
</div>

<div data-hook="admin_post_new_form">
  <%= simple_form_for(:post, :url => collection_url, :html => {:class => "form-horizontal"}) do |f| %>
    <%= render :partial => "form", :locals => { :f => f } %>

    <div data-hook="admin_post_new_form_button">
      <%= render :partial => 'spree/admin/shared/new_resource_links' %>
    </div>
    
  <% end %>
</div>
