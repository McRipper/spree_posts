<div class='toolbar'>
  <ul class='actions'>
    <li>
      <p><%= button_link_to t("new_post"), new_object_url, :icon => 'add' %></p>
    </li>
  </ul>
  <br class='clear' />
</div>

<h1><%= t("listing_posts") %></h1>

<table class="index">
  <thead>
  <tr>
    <th><%= t("title") %></th>
    <th><%= t("permalink") %></th>
    <th><%= t("published") %></th>
    <th>&nbsp;</th>
  </tr>
  </thead>
  <tbody>
    <% @posts.each do |post|%>
      <tr id="<%= dom_id post %>">
        <td width="350px"><%=link_to post.title, edit_object_url(post) %></td>
        <td><%= post.permalink %></td>
        <td><%= t(post.published? ? 'yes' : 'no') %></td>
        <td>
            <%= link_to_edit post %> &nbsp;
            <%= link_to_delete post %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @posts %>
